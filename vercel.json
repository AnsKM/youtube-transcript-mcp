{
  "version": 2,
  "rewrites": [
    {
      "source": "/mcp",
      "destination": "/api/mcp"
    },
    {
      "source": "/",
      "destination": "/api/mcp"
    }
  ],
  "functions": {
    "api/mcp.py": {
      "maxDuration": 60,
      "runtime": "python3.12"
    }
  },
  "headers": [
    {
      "source": "/mcp",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "POST, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ]
}